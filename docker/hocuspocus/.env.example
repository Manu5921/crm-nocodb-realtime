# Hocuspocus Server Configuration
# Copy this file to .env and modify the values as needed

# Server Configuration
HOCUSPOCUS_PORT=3001
HOCUSPOCUS_NAME=nocodb-crm-hocuspocus
HOCUSPOCUS_TIMEOUT=30000
HOCUSPOCUS_DEBOUNCE=2000
HOCUSPOCUS_MAX_DEBOUNCE=10000
NODE_ENV=development

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_KEY_PREFIX=hocuspocus:

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Throttling Configuration
THROTTLE_ENABLED=true
THROTTLE_LIMIT=15
THROTTLE_BAN_TIME=5

# Logging Configuration
LOG_LOAD_DOCUMENT=true
LOG_CHANGE=true
LOG_CONNECT=true
LOG_DISCONNECT=true
LOG_AUTHENTICATE=true
LOG_REQUEST=false
LOG_UPGRADE=false
LOG_LISTEN=true
LOG_DESTROY=true

# Authentication Configuration
# TODO: Add your authentication service configuration here
AUTH_SERVICE_URL=http://localhost:3000/api/auth
AUTH_JWT_SECRET=your-jwt-secret-here